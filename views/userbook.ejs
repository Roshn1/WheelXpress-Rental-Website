<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Enhanced Booking Section</title>
    <link rel="stylesheet" href="/css/userbook.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>

    <nav class="navbar">
        <div class="navbar-logo">
            <img src="/photos/logo.png" alt="WheelXpress Logo">
            <span class="navbar-brand">WheelXpress</span>
        </div>
        
        <div class="navbar-toggle" id="navbarToggle">
            <div></div>
            <div></div>
            <div></div>
        </div>

         
        <div class="navbar-menu" id="navbarMenu">
            <a href="/dashboard" class="navbar-item">
                <i class="fa-solid fa-table-columns"></i>
                <span>Dashboard</span>
            </a>
            <a href='/dashboard/availability' class="navbar-item">
                <i class="fas fa-car-side"></i>
                <span>Availability</span>
            </a>
            <a href="/dashboard/bookings" class="navbar-item">
                <i class="fa-solid fa-clock-rotate-left"></i>
                <span>Booking</span>
            </a>
            <a href="/dashboard/map" class="navbar-item">
                <i class="fa-solid fa-map"></i>
                <span>Map</span>
            </a>
            <a href="/dashboard/support" class="navbar-item">
                <i class="fas fa-info-circle"></i>
                <span>Support</span>
            </a>
            <a href="/dashboard/profile" class="navbar-item">
                <i class="fa-regular fa-id-badge"></i>
                <span>Profile</span>
            </a>
            
            <a href="/login" class="navbar-item">
                <i class="fa-solid fa-right-to-bracket"></i>
                <span>Logout</span>
            </a>           
            
        </div>
    </nav>

<div class="booking-section">
 
    <div class="booking-list" id="recentBookingsList">
     
        <main>
            <section>
              <h2>Booking History</h2>
              <div class="card-container">
                <% emailLogs.forEach(log => { %>
                
                   
                    <div class="message-container">
                   
                      <div><%- log.message %></div> 
                    
              
                    <% if (log.errorDetails) { %>
                      <p><strong>Error Details:</strong> <%= log.errorDetails %></p>
                    <% } %>
                  </div>
                <% }) %>
              </div>
            </section>
          </main>
        
    </div>

    
</div>

  <div id="scrollToTop" class="scroll-to-top">
    <i class="fas fa-arrow-up"></i>
  </div>
  
  <footer class="footer">
    <div class="footer-container">
        <div class="footer-logo">
            <h3>WheelXpress</h3>
        </div>
        <div class="footer-links">
            <ul>
                <li><a href="#">About Us</a></li>
                <li><a href="#">Contact</a></li>
                <li><a href="#">Privacy Policy</a></li>
                <li><a href="#">Terms of Service</a></li>
            </ul>
        </div>
        <div class="footer-social">
            <ul>
                <li><a href="#" class="social-icon"><i class="fab fa-facebook-f"></i></a></li>
                <li><a href="#" class="social-icon"><i class="fab fa-twitter"></i></a></li>
                <li><a href="#" class="social-icon"><i class="fab fa-instagram"></i></a></li>
                <li><a href="#" class="social-icon"><i class="fab fa-linkedin-in"></i></a></li>
            </ul>
        </div>
    </div>
    <div class="footer-bottom">
        <p>&copy; 2024 WheelXpress. All rights reserved.</p>
    </div>
  </footer>
  

</body>
</html>
